<Label>:
    font_name: 'Loma Book'


<InfoScreen>:
    progress: video_widget.position / max(0,.0001, video_widget.duration)

    Image:
        source: 'images/background.png'

    Video:
        id: video_widget
        source: root.trailer
        play: True
        pos: (0, 250)

    Label:
        text: root.title
        size_hint: (1, None)
        pos: (0,480)
        font_size: 60
        bold: True

    Label:
        text: "Theater: 8   7:00pm - 9:00pm"
        size_hint: (1, None)
        pos: (0,325)
        font_size: 30

    Label:
        text: "Theater: 5   8:30pm - 10:30pm"
        size_hint: (1, None)
        pos: (0,200)
        font_name: 'Loma Book'
        font_size: 30

    Label:
        text: "Theater: 3   9:30pm - 12:30pm"
        size_hint: (1, None)
        pos: (0,75)
        font_name: 'Loma Book'
        font_size: 30



<WelcomeScreen>
    Image:
        source: 'images/welcome.png'

    Video:
        id: trailer1
        source: root.trailer
        size: (384/2, 216/2)
        size_hint: (None, None)
        pos_hint: {}
        pos: (50, 180)
        play: True
        canvas.before:
            Color:  
                rgb: 0,0,0
            Rectangle:
                pos: self.pos
                size: self.size


    Label:
        text: root.title
        size_hint: (None, None)
        anchor_x: 'left'
        align: 'left'
        size: (200, 100 + (0*len(self.text)))
        pos: (trailer1.x, trailer1.y+70)
        font_size: 22


    Label:
        text: root.summary
        size_hint: (None, None)
        width: 200 + 0*len(self.text)
        multiline:True
        anchor_x: 'left'
        align: 'left'
        pos: (trailer1.x, trailer1.y-10)
        font_size: 12
