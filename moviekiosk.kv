<AppScreen>:
    orientation: 'vertical'
    size: (1080,1920)
    size_hint: (None, None)

<LogoImage>
    canvas.before:
        Color:
            rgb: self.bg_r, self.bg_g, self.bg_b
        Rectangle:
            pos:  self.x, self.y+18
            size: self.size


<Button>:
    font_size: 40

<IncButton>:
    canvas:
        Clear

<DecButton>:
    canvas:
        Clear

<BuyingOverlay>
    y: 550
    size: 1080, 1000

    Widget:
        size_hint:(.1,1)
    BoxLayout:
        orientation: 'vertical'
        size_hint:(.8,1)
        canvas:
            Rectangle:
                pos:  self.pos
                size: self.size
                source: 'images/payment-overlay.png'
        Widget:
            text: "Purchase Tickets"
            size_hint:(1,1.3)
        BoxLayout:
            IncButton:
                text: "Adults more"
                on_release: root.num_adults +=1
            IncButton:
                text: "Kids more"
                on_release: root.num_kids +=1
        BoxLayout:
            Label:
                text: str(root.num_adults)
                font_size: 150
                bold: True
            Label:
                text: str(root.num_kids)
                font_size: 150
                bold: True
        BoxLayout:
            DecButton:
                text: "Adults less"
                on_release: root.decr_adults()
            DecButton:
                text: "Kids less"
                on_release: root.decr_kids()
        Label:
            text: "Total: $ %s" % (root.num_adults*8 + root.num_kids*5)
            font_size: 60
            size_hint:(1,1)
        DecButton:
            text: "Pay"
            on_release: root.finish_buy()
            
        
    Widget:
        size_hint:(.1,1)

<MovieVideo>
    canvas.before:
        Color:
            rgba: .1,.1,.1,1.0
        Rectangle:
            pos: self.pos
            size: self.size

<MovieTitle>
    font_size: 48
    height: 100
    width: 1080
    padding_x: 10
    padding_y: 10
    text_size: (1000,100)
    align: 'left'
    bold: True

<MovieSummary>
    font_size: 22
    padding: (10, 30)
    width: 1080
    height: self.texture_size[1]
    y: 800 -  self.height
    v_align: 'top'


<MovieMetaInfo>
    font_size: 30
    height: 100
    width: 1080
    padding_x: 10
    padding_y: 10
    text_size: (1000,100)
    halign: 'left'
    bold: True
    text: "Rating: " + self.rating




<MovieScreen>
    size: (1080,1920)
    size_hint: (None, None)


<BuyButton>
    canvas:
        Clear
        Rectangle:
            size:self.size
            pos: self.pos
            source: 'images/buytickets.png'


<MovieThumbnail>:
    canvas:
        Rectangle:
            source: 'images/columnbg.png'
            pos: self.pos
            size: self.size 


<ThumbnailTitle>:
    font_size: 28 if(len(self.text) < 20) else 20
    bold: True
    size_hint: (1,None)
    text_size: (300, None)
    height: 110
    
    canvas.before:
        Color:
            rgba: (0,0,0,0.5)
        Rectangle:
            pos:self.pos
            size:self.size
    
<ThumbnailVideo>:
    size_hint: (1, 4/3.0)
    canvas.before:
        Color:
            rgba: 0,0,0,1
        Rectangle:
            pos: self.pos
            size: self.size

<ThumbnailDetails>:
    font_size: 16
    padding_y: 20



<Fade>:
    canvas.after:
        Color:
            rgba:(0,0,0,self.alpha)
        Rectangle:
            pos:0,0
            size:1080,1920


<InfoScreen>
    orientation: 'vertical'
    size: (1080,1920)
    size_hint: (None, None)

    Image:
        source: 'images/1topbg.png'
        size_hint: (1.0, 0.6)
    Image:
        source: 'images/1bottombg.png'
        size_hint: (1.0, 0.4)



<ThankYouScreen>
    Image
        source: "images/thankyou.png"
        size_hint: (1.0, 1.0)

